# MonFarm Environment Variables Template
# Copy this file to .env and fill in your actual values

# Privy Configuration (Required)
NEXT_PUBLIC_PRIVY_APP_ID=your-privy-app-id-here

# WalletConnect Configuration (Required for wallet connections)
# Get your project ID from https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id-here

# Multisynq Configuration (Required for real-time features)
# Get your API key from https://multisynq.io/coder
NEXT_PUBLIC_MULTISYNQ_API_KEY=your-multisynq-api-key-here

# React Together Configuration (Optional - for enhanced real-time features)
NEXT_PUBLIC_REACT_TOGETHER_API_KEY=your-react-together-api-key-here

# Application Configuration
NEXT_PUBLIC_APP_ID=com.monfarm.social
NEXT_PUBLIC_APP_NAME=MonFarm Social Hub

# Blockchain Configuration (Optional - defaults provided)
NEXT_PUBLIC_MONAD_RPC_URL=https://testnet-rpc.monad.xyz
NEXT_PUBLIC_MONAD_CHAIN_ID=10143

# Development Configuration
NODE_ENV=development
