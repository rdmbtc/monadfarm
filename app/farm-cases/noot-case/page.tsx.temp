      toast.success(`Sold ${item.tokenAmount} ${item.tokenKey} tokens for ${farmCoinsToAdd} Farm Coins!`);
    } catch (error) {
      console.error("Error selling token:", error);
      toast.error("Error selling token. Please try again.");
    } finally {
